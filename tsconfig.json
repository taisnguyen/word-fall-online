    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "ESNext",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "esm": true
  }
}