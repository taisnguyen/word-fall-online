<%# const letters = letters !== undefined ? letters : [] %>

<div class="word-board" data-initial-letters='<%- JSON.stringify(letters); %>'>
    <canvas class="line-canvas">
    </canvas>

    <div class="grid-container no-select">
        <% for (let i = 0; i < 4; i++) { %>
            <div class="grid-row">
                <% for (let j = 0; j < 4; j++) { %>
                    <div class="grid-cell no-select"></div>
                <% } %>
            </div>
        <% } %>
    </div>

    <div class="letter-tile-container no-select">
        <% for (let r = 0; r < 4; r++) { %>
            <% for (let c = 0; c < 4; c++) { %>
                <% const letter = letters[r][c]; %>
                <% if (letter !== "-") { %>
                    <div class="letter-tile position-<%= r %>-<%= c %>"><h1><%= letter.toUpperCase() %></h1></div>
                <% } %>
            <% } %>
        <% } %>
    </div>
</div>
